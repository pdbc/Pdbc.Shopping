{
  "build": {
    "content": [
      {
        "files": [
          "general/**/*.{md,yml}",
          "articles/**/*.{md,yml}",
          "cookbooks/**/*.{md,yml}",
          "concepts/**/*.{md,yml}",
          "questions/**/*.{md,yml}",
          "internal/**/*.{md,yml}",
          "flows/**/*.{md,yml}",
          "scopes/**/*.{md,yml}",
          "api/**/*.{md,yml}",
          "*.{md,yml}"
        ],
        "exclude": [ "obj/**", "_site/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "images/**", "files/**" ],
        "exclude": [ "obj/**", "_site/**" ]
      }
    ],
    "overwrite": [
      {
        "files": [ "apidoc/**.md" ],
        "exclude": [ "obj/**", "_site/**" ]
      }
    ],
    "globalMetadata": {
      "_disableContribution": false,
      "_appFaviconPath": "images/favicon.ico"
    },
    "dest": "_site",
    "template": [
      "default"
    ]
  }
}